pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'nextjs-app'
        DOCKER_REGISTRY = 'https://hub.docker.com/r/prasadmpotdar'
        K8S_NAMESPACE = 'default'
        K8S_DEPLOYMENT_NAME = 'nextjs-app-deployment'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t $DOCKER_IMAGE ."
                }
            }
        }
        stage('Push Docker Image to Registry') {
            steps {
                script {
                    // Log into Docker registry
                    withCredentials([usernamePassword(credentialsId: 'docker-creds', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh "docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD $DOCKER_REGISTRY"
                    }
                    // Push Docker image to registry
                    sh "docker tag $DOCKER_IMAGE $DOCKER_REGISTRY/$DOCKER_IMAGE"
                    sh "docker push $DOCKER_REGISTRY/$DOCKER_IMAGE"
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Deploy Docker image to Kubernetes
                    sh """
                        kubectl set image deployment/$K8S_DEPLOYMENT_NAME nextjs-app=$DOCKER_REGISTRY/$DOCKER_IMAGE --namespace=$K8S_NAMESPACE
                    """
                }
            }
        }
    }
}
